{% from "../partials/ctas.njk" import ctas %}
{% from "../partials/responsive-image.njk" import responsiveImage %}
{% from "../partials/text.njk" import text %}
{% from "../partials/icon.njk" import icon %}

{# this section receives props params and site #}

<section class="section-two-columns {% if params.paddingTop %}paddingTop{% endif %} {% if params.paddingBottom %}paddingBottom{% endif %}">
  <div class="content columns {% if params.reverse %}reverse{% endif %}">
    {% set info = params %}

    <div class="column1 {{ info.column1.columnClasses }}">
      {{ text(info.column1)}}

      {% if info.column1.hasCtas %}
        {{ ctas(info.column1) }}
      {% endif %}
    </div>

    <div class="column2">
      {{ text(info.column2)}}

      {% if info.column2.hasCtas %}
        {{ ctas(info.column2) }}
      {% endif %}
    </div>

  </div>
</section>